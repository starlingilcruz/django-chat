files:
  "/etc/nginx/conf.d/websocket.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      upstream daphne {
          server 127.0.0.1:8000;
      }

      map $http_upgrade $connection_upgrade {
          default upgrade;
          '' close;
      }

  "/opt/elasticbeanstalk/tasks/taillogs.d/django.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/log/django/*.log
